<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.clinica.controller.RelatoriosController">

    <children>
        <VBox spacing="12" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <Label text="Relatórios" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TabPane VBox.vgrow="ALWAYS">

                <!-- ===================== ABA: CAIXA ===================== -->
                <Tab text="Caixa" closable="false">
                    <BorderPane>
                        <top>
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Período:"/>
                                    <DatePicker fx:id="dtCxInicio"/>
                                    <Label text="até"/>
                                    <DatePicker fx:id="dtCxFim"/>

                                    <Button text="Buscar" onAction="#onBuscarCaixa"/>
                                    <Button text="Exportar PDF" onAction="#onExportarCaixaPdf"/>
                                </HBox>

                                <HBox spacing="16" alignment="CENTER_LEFT">
                                    <Label text="Entradas:" style="-fx-font-weight: bold;"/>
                                    <Label fx:id="lblCxEntradas" text="R$ 0,00"/>

                                    <Label text="Saídas:" style="-fx-font-weight: bold;"/>
                                    <Label fx:id="lblCxSaidas" text="R$ 0,00"/>

                                    <Label text="Saldo:" style="-fx-font-weight: bold;"/>
                                    <Label fx:id="lblCxSaldo" text="R$ 0,00"/>
                                </HBox>

                                <Separator/>
                            </VBox>
                        </top>

                        <center>
                            <TableView fx:id="tblCaixa" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colCxData" text="Data" prefWidth="110"/>
                                    <TableColumn fx:id="colCxTipo" text="Tipo" prefWidth="90"/>
                                    <TableColumn fx:id="colCxDescricao" text="Descrição" prefWidth="280"/>
                                    <TableColumn fx:id="colCxForma" text="Forma" prefWidth="130"/>
                                    <TableColumn fx:id="colCxValor" text="Valor (R$)" prefWidth="110"/>
                                    <TableColumn fx:id="colCxPaciente" text="Paciente" prefWidth="220"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- ===================== ABA: AGENDAMENTOS ===================== -->
                <Tab text="Agendamentos" closable="false">
                    <BorderPane>
                        <top>
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Período:"/>
                                    <DatePicker fx:id="dtAgInicio"/>
                                    <Label text="até"/>
                                    <DatePicker fx:id="dtAgFim"/>

                                    <Label text="Profissional:"/>
                                    <ComboBox fx:id="cbAgProfissional" prefWidth="260"/>

                                    <Button text="Buscar" onAction="#onBuscarAgendamentos"/>
                                    <Button text="Exportar PDF" onAction="#onExportarAgendamentosPdf"/>
                                </HBox>

                                <Separator/>
                            </VBox>
                        </top>

                        <center>
                            <TableView fx:id="tblAgendamentos" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colAgData" text="Data" prefWidth="110"/>
                                    <TableColumn fx:id="colAgHora" text="Horário" prefWidth="110"/>
                                    <TableColumn fx:id="colAgProf" text="Profissional" prefWidth="220"/>
                                    <TableColumn fx:id="colAgSala" text="Sala" prefWidth="120"/>
                                    <TableColumn fx:id="colAgPaciente" text="Paciente" prefWidth="220"/>
                                    <TableColumn fx:id="colAgStatus" text="Status" prefWidth="120"/>
                                    <TableColumn fx:id="colAgProced" text="Procedimento" prefWidth="250"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

                <!-- ===================== ABA: NOTAS ===================== -->
                <Tab text="Notas" closable="false">
                    <BorderPane>
                        <top>
                            <VBox spacing="10">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="Período:"/>
                                    <DatePicker fx:id="dtNotaInicio"/>
                                    <Label text="até"/>
                                    <DatePicker fx:id="dtNotaFim"/>

                                    <Label text="Paciente (contém):"/>
                                    <TextField fx:id="txtPacienteFiltro" promptText="Ex: maria" prefWidth="180"/>

                                    <Label text="Profissional:"/>
                                    <ComboBox fx:id="cbNotaProfissional" prefWidth="240"/>

                                    <Label text="Forma:"/>
                                    <ComboBox fx:id="cbNotaForma" prefWidth="160"/>

                                    <Button text="Buscar" onAction="#onBuscarNotas"/>
                                    <Button text="Exportar PDF (Relatório)" onAction="#onExportarNotasPdf"/>
                                    <Button text="Reimprimir PDF (Nota)" onAction="#onReimprimirNota"/>
                                </HBox>

                                <Separator/>
                            </VBox>
                        </top>

                        <center>
                            <TableView fx:id="tblNotas" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colNotaId" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="colNotaDataHora" text="Data/Hora" prefWidth="150"/>
                                    <TableColumn fx:id="colNotaPaciente" text="Paciente" prefWidth="260"/>
                                    <TableColumn fx:id="colNotaProfissional" text="Profissional" prefWidth="220"/>
                                    <TableColumn fx:id="colNotaForma" text="Forma" prefWidth="120"/>
                                    <TableColumn fx:id="colNotaTotal" text="Total (R$)" prefWidth="120"/>
                                </columns>
                            </TableView>
                        </center>
                    </BorderPane>
                </Tab>

            </TabPane>
        </VBox>
    </children>
</AnchorPane>