<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.clinica.controller.MainController">

    <top>
        <VBox spacing="8" styleClass="top-bar">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <!-- Barra de navegação -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Início" onAction="#onInicio" styleClass="nav-btn"/>

                <Button fx:id="btnBack" text="←" onAction="#onBack" styleClass="nav-btn"/>
                <Button fx:id="btnForward" text="→" onAction="#onForward" styleClass="nav-btn"/>


                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Logado:" styleClass="user-label" />
                <Label fx:id="lblUsuarioLogado" text="-" styleClass="user-name" />
            </HBox>

            <Separator/>

            <!-- Menu -->
            <MenuBar>
                <Menu text="Cadastros">
                    <MenuItem text="Pacientes" onAction="#onPacientes"/>
                </Menu>

                <Menu text="Movimentações">
                    <MenuItem text="Agenda" onAction="#onAgenda"/>
                    <MenuItem text="Caixa / Notas" onAction="#onCaixa"/>
                    <MenuItem text="Movimento de Caixa" onAction="#onMovimentoCaixa"/>
                    <MenuItem text="Estoque" onAction="#onEstoque"/>
                </Menu>

                <Menu text="Relatórios">
                    <MenuItem text="Relatórios Gerais" onAction="#onRelatorios"/>
                </Menu>

                <Menu text="Administração">
                    <MenuItem text="Usuários &amp; Perfis" onAction="#onUsuarios"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>

    <center>
        <StackPane>
            <!-- HOME -->
            <VBox fx:id="homeBox" spacing="14">
                <padding>
                    <Insets top="18" right="20" bottom="20" left="20"/>
                </padding>

                <VBox spacing="4">
                    <Label text="Clínica Klean - Saúde Integrativa" styleClass="h1"/>
                    <Label text="Selecione uma área para começar" styleClass="sub"/>
                </VBox>

                <GridPane hgap="15" vgap="15" styleClass="card-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                        <ColumnConstraints percentWidth="33"/>
                    </columnConstraints>

                    <Button onAction="#onPacientes" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Pacientes" styleClass="card-title"/>
                                <Label text="Cadastro, busca e prontuário" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button onAction="#onAgenda" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Agenda" styleClass="card-title"/>
                                <Label text="Consultas e horários" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button onAction="#onCaixa" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="0" GridPane.columnIndex="2">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Caixa / Notas" styleClass="card-title"/>
                                <Label text="Pagamentos e notas" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button onAction="#onMovimentoCaixa" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Movimento de Caixa" styleClass="card-title"/>
                                <Label text="Entradas, saídas e fechamento" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button onAction="#onEstoque" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Estoque" styleClass="card-title"/>
                                <Label text="Itens, validade e consumo" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button onAction="#onUsuarios" maxWidth="Infinity" styleClass="card-btn"
                            GridPane.rowIndex="1" GridPane.columnIndex="2">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Usuários &amp; Perfis" styleClass="card-title"/>
                                <Label text="Permissões e acessos" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>
                </GridPane>
            </VBox>

            <!-- Conteúdo carregado -->
            <AnchorPane fx:id="contentPane" visible="false" managed="false"/>
        </StackPane>
    </center>

</BorderPane>
