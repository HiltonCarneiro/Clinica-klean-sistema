<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.clinica.controller.MainController">

    <top>
        <VBox spacing="8" styleClass="top-bar">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <!-- Barra de navegação -->
            <HBox spacing="10" alignment="CENTER_LEFT">

                <Button text="Início" onAction="#onInicio" styleClass="nav-btn"/>

                <Button fx:id="btnBack" text="←" onAction="#onBack" styleClass="nav-btn"/>
                <Button fx:id="btnForward" text="→" onAction="#onForward" styleClass="nav-btn"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Logado:" styleClass="user-label" />
                <Label fx:id="lblUsuarioLogado" text="-" styleClass="user-name" />

                <!-- ✅ NOVO (seguindo o mesmo padrão visual) -->
                <Button text="Sair" onAction="#onSair" styleClass="nav-btn"/>

            </HBox>

            <Separator/>

            <!-- Menu -->
            <MenuBar fx:id="menuBarTop">
                <Menu fx:id="menuCadastros" text="Cadastros">
                    <MenuItem fx:id="miPacientes" text="Pacientes" onAction="#onPacientes"/>
                </Menu>

                <Menu fx:id="menuOperacoes" text="Operações">
                    <MenuItem fx:id="miAgenda" text="Agenda" onAction="#onAgenda"/>
                    <MenuItem fx:id="miCaixa" text="Caixa / Notas" onAction="#onCaixa"/>
                    <MenuItem fx:id="miEstoque" text="Estoque" onAction="#onEstoque"/>
                </Menu>

                <Menu fx:id="menuRelatorios" text="Relatórios">
                    <MenuItem fx:id="miRelatorios" text="Relatórios Gerais" onAction="#onRelatorios"/>
                </Menu>

                <Menu fx:id="menuAdministracao" text="Administração">
                    <MenuItem fx:id="miUsuarios" text="Usuários &amp; Perfis" onAction="#onUsuarios"/>
                    <MenuItem fx:id="miAuditoria" text="Auditoria" onAction="#onAuditoria"/>
                </Menu>
            </MenuBar>

        </VBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">

            <!-- HOME -->
            <VBox fx:id="homeBox" spacing="18" alignment="TOP_CENTER">
                <padding>
                    <Insets top="18" right="20" bottom="20" left="20"/>
                </padding>

                <!-- LOGO acima do título -->
                <VBox alignment="CENTER" spacing="8">
                    <ImageView fx:id="imgLogoHome"
                               opacity="0.95"
                               fitHeight="110"
                               preserveRatio="true"
                               smooth="true"/>

                    <Label text="Clínica Klean - Saúde Integrativa" styleClass="h1"/>
                    <Label text="Selecione uma área para começar" styleClass="sub"/>
                </VBox>

                <!-- TILEPANE (reorganiza automático quando cards somem) -->
                <TilePane fx:id="homeTiles"
                          alignment="CENTER"
                          hgap="18" vgap="18"
                          prefColumns="3"
                          prefTileWidth="260"
                          prefTileHeight="120">

                    <Button fx:id="btnCardPacientes"
                            onAction="#onPacientes"
                            prefWidth="260" prefHeight="120"
                            styleClass="card-btn">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Pacientes" styleClass="card-title"/>
                                <Label text="Cadastro, busca e prontuário" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnCardAgenda"
                            onAction="#onAgenda"
                            prefWidth="260" prefHeight="120"
                            styleClass="card-btn">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Agenda" styleClass="card-title"/>
                                <Label text="Consultas e horários" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnCardCaixa"
                            onAction="#onCaixa"
                            prefWidth="260" prefHeight="120"
                            styleClass="card-btn">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Caixa / Notas" styleClass="card-title"/>
                                <Label text="Pagamentos e notas" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnCardEstoque"
                            onAction="#onEstoque"
                            prefWidth="260" prefHeight="120"
                            styleClass="card-btn">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Estoque" styleClass="card-title"/>
                                <Label text="Itens, validade e consumo" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnCardUsuarios"
                            onAction="#onUsuarios"
                            prefWidth="260" prefHeight="120"
                            styleClass="card-btn">
                        <graphic>
                            <VBox spacing="4">
                                <Label text="Usuários &amp; Perfis" styleClass="card-title"/>
                                <Label text="Permissões e acessos" styleClass="card-desc"/>
                            </VBox>
                        </graphic>
                    </Button>

                </TilePane>
            </VBox>

            <!-- CONTEÚDO -->
            <AnchorPane fx:id="contentPane" visible="false" managed="false"/>

        </StackPane>
    </center>

</BorderPane>