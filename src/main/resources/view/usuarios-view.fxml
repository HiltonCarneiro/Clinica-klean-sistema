<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="br.com.clinica.controller.UsuariosPerfisController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label text="Usuários &amp; Perfis"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Separator/>
        </VBox>
    </top>

    <center>
        <TabPane>

            <!-- =================== USUÁRIOS =================== -->
            <Tab text="Usuários" closable="false">
                <BorderPane>
                    <top>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <padding>
                                <Insets top="10" right="12" bottom="10" left="12"/>
                            </padding>

                            <Label text="Buscar:"/>
                            <TextField fx:id="txtBuscaUsuario" promptText="login, cargo ou pessoa..." HBox.hgrow="ALWAYS"/>
                            <CheckBox fx:id="chkIncluirInativos" text="Incluir inativos"/>
                            <Button text="Atualizar" onAction="#onAtualizarUsuarios"/>
                            <Button text="Novo" onAction="#onNovoUsuario"/>
                        </HBox>
                    </top>

                    <center>
                        <SplitPane dividerPositions="0.58">
                            <!-- Tabela -->
                            <VBox spacing="8">
                                <padding>
                                    <Insets top="0" right="12" bottom="12" left="12"/>
                                </padding>

                                <TableView fx:id="tblUsuarios" prefHeight="500">
                                    <columns>
                                        <TableColumn fx:id="colUId" text="ID" prefWidth="60"/>
                                        <TableColumn fx:id="colULogin" text="Login" prefWidth="180"/>
                                        <TableColumn fx:id="colUPessoa" text="Pessoa" prefWidth="220"/>
                                        <TableColumn fx:id="colUCargo" text="Cargo" prefWidth="160"/>
                                        <TableColumn fx:id="colUPerfil" text="Perfil" prefWidth="160"/>
                                        <TableColumn fx:id="colUAtivo" text="Ativo" prefWidth="80"/>
                                    </columns>
                                </TableView>

                                <HBox spacing="10">
                                    <Button text="Ativar/Inativar" onAction="#onAtivarInativarUsuario"/>
                                    <Button text="Resetar Senha" onAction="#onResetarSenha"/>
                                </HBox>

                                <Label fx:id="lblMsgUsuarios" textFill="red"/>
                            </VBox>

                            <!-- Form -->
                            <VBox spacing="10">
                                <padding>
                                    <Insets top="10" right="12" bottom="12" left="12"/>
                                </padding>

                                <Label text="Dados do usuário" style="-fx-font-weight: bold;"/>

                                <GridPane hgap="10" vgap="10">
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="110"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>

                                    <Label text="Cargo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtCargo" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Ex: ENFERMEIRA"/>

                                    <Label text="Pessoa:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtPessoaNome" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Nome completo"/>

                                    <Label text="Login:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtLogin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                    <Label text="Senha:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <PasswordField fx:id="txtSenha" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                    <Label text="Perfil:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="cbPerfilUsuario" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                    <Label text="Ativo:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                    <CheckBox fx:id="chkAtivoUsuario" GridPane.rowIndex="5" GridPane.columnIndex="1" selected="true"/>
                                </GridPane>

                                <HBox spacing="10">
                                    <Button text="Salvar" onAction="#onSalvarUsuario"/>
                                    <Button text="Cancelar" onAction="#onCancelarUsuario"/>
                                </HBox>

                                <Label fx:id="lblMsgUsuarioForm" textFill="red"/>
                            </VBox>
                        </SplitPane>
                    </center>
                </BorderPane>
            </Tab>

            <!-- =================== PERFIS =================== -->
            <Tab text="Perfis" closable="false">
                <BorderPane>
                    <padding>
                        <Insets top="10" right="12" bottom="12" left="12"/>
                    </padding>

                    <top>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Novo perfil:"/>
                            <TextField fx:id="txtNovoPerfil" promptText="Ex: NUTRICIONISTA" HBox.hgrow="ALWAYS"/>
                            <Button text="Criar" onAction="#onCriarPerfil"/>
                            <Button text="Atualizar" onAction="#onAtualizarPerfis"/>
                        </HBox>
                    </top>

                    <center>
                        <SplitPane dividerPositions="0.55">
                            <TableView fx:id="tblPerfis">
                                <columns>
                                    <TableColumn fx:id="colPId" text="ID" prefWidth="80"/>
                                    <TableColumn fx:id="colPNome" text="Nome" prefWidth="300"/>
                                </columns>
                            </TableView>

                            <VBox spacing="10" alignment="TOP_LEFT">
                                <Label text="Renomear perfil" style="-fx-font-weight: bold;"/>
                                <Label text="Selecione um perfil na tabela e informe o novo nome:"/>
                                <TextField fx:id="txtRenomearPerfil" promptText="Novo nome"/>
                                <Button text="Salvar nome" onAction="#onRenomearPerfil"/>
                                <Label fx:id="lblMsgPerfis" textFill="red"/>
                            </VBox>
                        </SplitPane>
                    </center>
                </BorderPane>
            </Tab>

            <!-- =================== PERMISSÕES =================== -->
            <Tab text="Permissões" closable="false">
                <BorderPane>
                    <padding>
                        <Insets top="10" right="12" bottom="12" left="12"/>
                    </padding>

                    <top>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Perfil:"/>
                            <ComboBox fx:id="cbPerfilPermissoes" prefWidth="320"/>
                            <Button text="Carregar" onAction="#onCarregarPermissoes"/>
                            <Button text="Salvar Permissões" onAction="#onSalvarPermissoes"/>
                        </HBox>
                    </top>

                    <center>
                        <ScrollPane fitToWidth="true">
                            <!-- CORREÇÃO: padding precisa ser Insets, não "10" -->
                            <VBox fx:id="boxPermissoes" spacing="8">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                            </VBox>
                        </ScrollPane>
                    </center>

                    <bottom>
                        <Label fx:id="lblMsgPermissoes" textFill="red"/>
                    </bottom>
                </BorderPane>
            </Tab>

        </TabPane>
    </center>
</BorderPane>